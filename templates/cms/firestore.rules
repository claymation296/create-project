
service cloud.firestore {
  match /databases/{database}/documents {
  
    // only users can read/write their personal data
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
  
    // only users can read/write their personal data subcollections
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // no outside writes
    match /admins/{adminId} {
      allow read: if request.auth.uid == adminId;
      allow write: if false;
    }

    // only admins may write, anyone can read
    match /cms/{allPaths=**} {
      allow read: if true;
      allow write: if get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin;
    }
    
  }
}